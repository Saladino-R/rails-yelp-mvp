<h1>List of restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <p><%= link_to restaurant.name, restaurant_path(restaurant.id) %> - <%= restaurant.address %> - <%= restaurant.category %> - My number is :
    <%= restaurant.phone_number %></p>
  </li>
  <% end %>
</ul>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :phone_number %>
  <%= f.submit %>
<% end %>
